<?xml version="1.0" encoding="UTF-8" ?>
<project name="distros" default="alldistros" basedir="." 
	xmlns:artifact="antlib:org.apache.maven.artifact.ant">
	<import file="ant/build.xml"/>
	<property file="build.properties"/>
	<target name="targetplatform">
		<antcall target="runmaventargetplatform">
			<param name="groups" value="dependency"/>
			<param name="feature_version" value="${version}"/>
		</antcall>
	</target>
	<target name="alldistros">
		<antcall target="dockerpush">
			<param name="groups" value=""/>
			<param name="distro" value="navajo-bare"/>
			<param name="dockerdistribution" value="bare"/>
		</antcall>
		<antcall target="dockerpush">
			<param name="groups" value="dependency"/>
			<param name="distro" value="navajo-dependency"/>
			<param name="dockerdistribution" value="dependency"/>
		</antcall>
	</target>
</project>
